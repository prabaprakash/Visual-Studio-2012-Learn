<Page x:Class="Visualization.Template"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:Visualization"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <Grid Margin="285,330,358,388" Background="White">
            <Grid Width="698" Height="45">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="48*" />
                    <ColumnDefinition Width="53*" />
                    <ColumnDefinition Width="88*" />
                    <ColumnDefinition Width="69*" />
                    <ColumnDefinition Width="91*" />
                </Grid.ColumnDefinitions>
                <Image Grid.Row="0"
                       Grid.RowSpan="2"
                       Grid.Column="0"
                       Source="Assets/SmallLogo.png" />
                <TextBlock Grid.Row="0"
                           Grid.Column="1"
                           Grid.ColumnSpan="2"
                           Text="Name :" />
                <TextBlock Grid.Row="0"
                           Grid.Column="2"
                           Grid.ColumnSpan="5"
                           Text="hhhhhhhhhhhhhhhhhhhhhhhh" />
                <TextBlock Grid.Row="1"
                           Grid.Column="1"
                           Text="ContentType :" />
                <TextBlock Grid.Row="1"
                           Grid.Column="2"
                           Text="{Binding ContentType}" />
                <TextBlock Grid.Row="1"
                           Grid.Column="3"
                           Text="Duration :" />
                <TextBlock Grid.Row="1"
                           Grid.Column="4"
                           Text="{Binding DateCreated}" />
            </Grid>
        </Grid>
    </Grid>
</Page>

